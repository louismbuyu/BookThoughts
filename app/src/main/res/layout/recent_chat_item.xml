<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recent_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/profile_image_of_the_receiver_user"
        android:layout_marginTop="@dimen/VERTICAL_MARGIN"
        android:layout_marginStart="@dimen/SIDE_MARGIN_EX"
        android:layout_marginBottom="@dimen/VERTICAL_MARGIN"/>

    <TextView
        android:id="@+id/recent_username_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_toStartOf="@id/recent_time_stamp"
        android:layout_toEndOf="@id/recent_image_view"
        android:layout_marginTop="@dimen/VERTICAL_MARGIN"
        android:layout_marginStart="@dimen/SIDE_MARGIN_IN"
        android:layout_marginEnd="@dimen/SIDE_MARGIN_IN"/>

    <TextView
        android:id="@+id/recent_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/SIDE_MARGIN_EX"
        android:layout_marginTop="@dimen/VERTICAL_MARGIN"
        android:textSize="12sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/recent_last_message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toStartOf="@id/recent_type_image"
        android:layout_toEndOf="@id/recent_image_view"
        android:layout_below="@id/recent_username_textview"
        android:layout_marginStart="@dimen/SIDE_MARGIN_IN"
        android:layout_marginEnd="@dimen/SIDE_MARGIN_IN"
        android:layout_marginTop="@dimen/VERTICAL_MARGIN"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recent_type_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@id/recent_time_stamp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/SIDE_MARGIN_EX"
        android:layout_marginTop="@dimen/VERTICAL_MARGIN"/>

</RelativeLayout>